<RelativeLayout
    android:layout_height="wrap_content" android:layout_marginRight="10dp"
    android:layout_width="wrap_content" android:layout_marginLeft="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="wrap_content" card_view:cardBackgroundColor="#EEFF41"
            xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_alignParentRight="true"
            android:layout_margin="1dp" card_view:cardCornerRadius="5dp" android:id="@+id/card" card_view:cardElevation="0dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content" android:layout_alignParentRight="true" android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Description" android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
            android:id="@+id/msg"  android:layout_alignParentRight="true" android:textColor="#000"
            android:textSize="18dp"
             />
            <LinearLayout
                android:layout_width="wrap_content"  android:layout_gravity="right"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:26" android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
                android:id="@+id/time"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_gravity="right" />
                <ImageView
                    android:layout_width="12dp" android:id="@+id/seen1" android:src="@drawable/time" android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom" android:layout_marginBottom="2dp"
                    android:layout_height="12dp" />
            <ImageView
                android:layout_width="12dp" android:id="@+id/seen2"
                android:layout_gravity="bottom" android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_height="12dp" />
            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

