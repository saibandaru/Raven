<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="#fff"
    android:layout_height="match_parent">
    <TextView
     android:id="@+id/help"
     android:layout_width="match_parent" android:background="@drawable/border_chatlist" android:textColor="#000"
     android:layout_height="0dp" android:layout_weight="1" android:textSize="24dp" android:gravity="center"
     android:text="Help"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent" android:background="@drawable/border_chatlist" android:textColor="#000"
        android:layout_height="0dp" android:layout_weight="1" android:textSize="24dp" android:gravity="center"
        android:text="Status"/>
    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent" android:background="@drawable/border_chatlist" android:textColor="#000"
        android:layout_height="0dp" android:layout_weight="1" android:textSize="24dp" android:gravity="center"
        android:text="Profile"/>
    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent" android:background="@drawable/border_chatlist" android:textColor="#000"
        android:layout_height="0dp" android:layout_weight="1" android:textSize="24dp" android:gravity="center"
        android:text="Account"/>
    <TextView
        android:layout_width="match_parent" android:background="@drawable/border_chatlist"
        android:layout_height="0dp" android:layout_weight="7"
        android:text=""/>
</LinearLayout>