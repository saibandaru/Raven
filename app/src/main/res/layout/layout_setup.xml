<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:background="@drawable/bf_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#ffff362f"
        android:textSize="25dp"
        android:text="Code"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/country_code"
        android:layout_marginTop="60dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Number"   android:textColor="#ffff362f"
        android:id="@+id/textView2"
        android:layout_above="@+id/country_code"
        android:layout_alignEnd="@+id/next_button" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/country_code"
        android:focusable="true" android:singleLine="true"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="4" android:textSize="25dp"
        android:maxLines="1" android:scrollbars="vertical"
        android:focusableInTouchMode="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:focusable="true" android:singleLine="true"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="10" android:textSize="25dp"
        android:maxLines="1" android:scrollbars="vertical"
        android:focusableInTouchMode="true"
        android:layout_alignTop="@+id/country_code"
        android:layout_alignStart="@+id/textView2" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next_button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/country_code"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView3" android:src="@drawable/icon_color"
        android:layout_below="@+id/next_button"
        android:layout_alignStart="@+id/country_code"
        android:layout_marginTop="22dp"
        android:layout_alignEnd="@+id/next_button" />

</RelativeLayout>