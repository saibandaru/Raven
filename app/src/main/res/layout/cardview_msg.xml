<RelativeLayout
    android:layout_height="wrap_content" android:layout_marginLeft="10dp"
    android:layout_width="wrap_content" android:layout_marginRight="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" card_view:cardBackgroundColor="#69F0AE"
    android:layout_margin="1dp" card_view:cardCornerRadius="5dp" android:id="@+id/card" card_view:cardElevation="0dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content" android:background="#69F0AE" android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
            android:text="Movie Description"
            android:id="@+id/msg" android:textColor="#000"
            android:textSize="18dp" android:layout_gravity="left" />
        <LinearLayout
            android:layout_width="wrap_content"  android:layout_gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:26" android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
                android:id="@+id/time"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_gravity="right" />
            <ImageView
                android:layout_width="0dp" android:id="@+id/seen1"  android:layout_marginLeft="0dp"
                android:layout_height="0dp" />
            <ImageView
                android:layout_width="0dp" android:id="@+id/seen2"
                android:layout_marginRight="0dp"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>