<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_weight="2"
        android:layout_height="0dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp" android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent" android:src="@drawable/contacticontwo" android:scaleType="fitXY"
            android:background="@drawable/rounded_corner" android:id="@+id/profile_pic"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="50dp" android:src="@drawable/edt" android:background="#000"
            android:layout_height="50dp" android:id="@+id/edit_icon_img"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="1"  android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent" android:background="@drawable/rounded_corner" android:layout_margin="10dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent" android:layout_weight="1" android:text="Username" android:textColor="#F44336"
                android:textSize="16dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="10dp"
                android:layout_height="wrap_content" android:background="@drawable/border_chatlist"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="match_parent" android:layout_weight="1" android:text="Building"
                android:textColor="#000"  android:id="@+id/phonenumber" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:textSize="16dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"  android:layout_margin="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent" android:layout_weight="1"  android:textColor="#ff777799"
                    android:textSize="16dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="2dp"
                    android:layout_height="wrap_content" android:text="This name will be shown for the users those doesn't have your contact."
                    android:id="@+id/textView4" />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_weight="0"  android:layout_marginBottom="5dp"
            android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="5dp"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

